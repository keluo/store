<!--pages/account/password/password.wxml-->
<view class="container">
  <view class="item item-info-group">
    <view class="item-info">
      <view class="item-label">
        手机号码：
      </view>
      <view class="item-input">
        13490982081
      </view>
    </view>
    <view class="item-info">
      <view class="item-label">
        验证码：
      </view>
      <view class="item-input valid-wrap">
        <input name="apcfg_ssid_auth_key" class="txt" value="{{apcfg_ssid_auth_key}}" placeholder="请输入验证码"></input>
        <view class="valid-btn blue">获取验证码</view>
      </view>
    </view>
    <view class="item-info">
      <view class="item-label">
        新密码：
      </view>
      <view class="item-input">
        <input name="apcfg_ssid_auth_key" class="txt" value="{{apcfg_ssid_auth_key}}" placeholder="请设置新密码"></input>
      </view>
    </view>
    <view class="item-info">
      <view class="item-label">
        确认密码：
      </view>
      <view class="item-input">
        <input name="apcfg_ssid_auth_key" class="txt" value="{{apcfg_ssid_auth_key}}" placeholder="请确认新密码"></input>
      </view>
    </view>
  </view>
  <view class="password-ext">
    密码6-12位，不支持特殊字符。
  </view>
  <view class="item-btn-group">
    <view class="item-btn">
      <button class="btn">保存新密码</button>
    </view>
  </view>
</view>


