<!--pages/account/login/login.wxml-->
<view class="container">
  <view class="item-logo">
    <image src="/images/logo.png"></image>
  </view>
  <view class="item-login-input {{method === '1'?'actived':''}}">
    <view class="login-input">
      <input type="text" placeholder="请输入登录账号"></input>
    </view>
    <view class="login-input">
      <input type="password" placeholder="请输入登录密码"></input>
    </view>
  </view>
  <view class="item-login-input {{method === '2'?'actived':''}}">
    <view class="login-input">
      <input type="text" placeholder="请输入手机号码"></input>
    </view>
    <view class="login-input valid-wrap">
      <input type="text" placeholder="请输入验证码"></input>
      <view class="valid-btn blue">获取验证码</view>
    </view>
  </view>
  <view class="item-btn-group">
    <view class="item-btn">
      <button class="btn">登录</button>
    </view>
  </view>
  <view class="item-login-method">
    <view class="login-method actived" bindtap="bindMethodSelected">{{method === '1' ?'验证码登录':'账号登录'}}</view>
    <view class="login-method">游客登录</view>
  </view>
</view>
