<!-- 客流组件 -->
<view class='overview-box'>
  <view class='overview-item'>
    <view class='overview-title'>
      客流量 <view class='icon-question' bindtap="openQuestion" data-btn="keLiu-pop"></view>
    </view>
    <view class='overview-num'>
      {{keLiu_total}}
    </view>
    <view class='overview-RingRatio'>
      环比 <view class="{{keLiu_lrr.plus_minus? 'icon-increase' : 'icon-decline'}}"></view> {{keLiu_lrr.lrr}}%
    </view>
  </view>
  <view class='overview-item'>
    <view class='overview-title'>
      进店客 <view class='icon-question' bindtap="openQuestion" data-btn="jinDian-pop"></view>
    </view>
    <view class='overview-num'>
      {{jinDian_total}}
    </view>
    <view class='overview-RingRatio'>
      环比 <view class="{{jinDian_lrr.plus_minus? 'icon-increase' : 'icon-decline'}}"></view> {{jinDian_lrr.lrr}}%
    </view>
  </view>
  <view class='overview-item'>
    <view class='overview-title'>
      新顾客 <view class='icon-question' bindtap="openQuestion" data-btn="xinKe-pop"></view>
    </view>
    <view class='overview-num'>
      {{totalNewCustomer}}
    </view>
    <view class='overview-RingRatio'>
      环比 <view class="{{newCustomer_lrr.plus_minus? 'icon-increase' : 'icon-decline'}}"></view> {{newCustomer_lrr.lrr}}%
    </view>
  </view>
</view>

<view class='item-box'>
  <view class='item-title'>
    <view class='item-title-txt'>客流趋势图</view>
    <component-select options="{{selectArray}}" bind:selected="bindSelected" nowText="店铺对比"></component-select>
  </view>
  <view class='item-box-content'>
    <view class='tab-box'>
      <view class="tab-item {{isActive == 0?'active':''}}" bindtap="isKeliu">客流量</view>
      <view class="tab-item {{isActive == 1?'active':''}}" bindtap="isJindian">进店客</view>
      <view class="tab-item {{isActive == 2?'active':''}}" bindtap="isXinke">新顾客</view>
    </view>

  <view class="container">
    <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
  </view>
    
  </view>
</view>

<view class="question">
  <component-pop class="keLiu-pop">
    <view slot="title">客流量</view>
    <view slot="content">
      所有路过店铺和进入店铺的人。
    </view>
    <view slot="foot">
      <text bindtap="closeBtn" data-btn="keLiu-pop">知道了</text>
    </view>
  </component-pop>
  <component-pop class="jinDian-pop">
    <view slot="title">进店客</view>
    <view slot="content">
      进入店铺且停留时长大于2分钟的人。
    </view>
    <view slot="foot">
      <text bindtap="closeBtn" data-btn="jinDian-pop">知道了</text>
    </view>
  </component-pop>
  <component-pop class="xinKe-pop">
    <view slot="title">新顾客</view>
    <view slot="content">
      首次到店的人数。
    </view>
    <view slot="foot">
      <text bindtap="closeBtn" data-btn="xinKe-pop">知道了</text>
    </view>
  </component-pop>
</view>