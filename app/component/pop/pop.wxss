/* component/pop/pop.wxss */
.pop-wrap {
  position: fixed;
  top: 0rpx;
  bottom: 0rpx;
  width: 100%;
}
.pop-bg {
  position: absolute;
  height:100%;
  width:100%;
  background-color:#000;
  top:0rpx;
  left:0rpx;
  z-index:99;
  overflow:hidden;
  opacity:0.65;
}
.pop-box {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index:100;
  background-color:#fff;
  padding: 50rpx 32rpx 0rpx;
  margin-bottom: 16rpx;
}
.pop-head {
  position: relative;
}
.pop-close {
  font-size:60rpx;
  width: 30rpx;
  line-height:30rpx;
  height: 30rpx;
  text-align:center;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  padding: 32rpx;
  color: #999;
  font-weight: 300;
}
.pop-body .pop-title {
  font-size: 36rpx;
  line-height: 42rpx;
  color: #333;
  font-weight: 600;
  text-align: center;
  margin-bottom: 16rpx;
}
.pop-body .pop-content {
  font-size: 28rpx;
  line-height: 42rpx;
  min-width: 480rpx;
  color: #000;
  margin-bottom: 16rpx;
}
.pop-foot {
  color: #108EE9;
  font-size: 36rpx;
  line-height: 98rpx;
  text-align: center;
  position: relative;
  font-weight: 900;
}
.pop-foot::before {
  content: " ";
  position: absolute;
  top: 0rpx;
  right: -32rpx;
  left: -32rpx;
  height: 0rpx;
  border-bottom: 1rpx solid #eee;
}